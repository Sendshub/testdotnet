@model IEnumerable<TestDotNet.Models.DataItem>

@{
    ViewData["Title"] = "Data Management";
    int counter = 1;
}

<div class="text-center">
    <h1 class="display-4">Data Management</h1>
    <table id="dataTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Id</td>
                <td>@item.Code</td>
                <td>@item.Value</td>
            </tr>
            counter++;
        }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable();
        });
    </script>
}